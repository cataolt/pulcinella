<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="config_data_save_before">
        <observer name="rename_color_scheme_config" instance="TemplateMonster\ThemeOptions\Observer\RenameColorSchemeConfig" />
    </event>
    <event name="layout_generate_blocks_after">
        <observer name="block_switcher" instance="TemplateMonster\ThemeOptions\Observer\BlockSwitcher" />
    </event>
    <event name="sales_quote_remove_item">
        <observer name="remove additional products" instance="TemplateMonster\ThemeOptions\Observer\RemoveProducts" />
    </event>
    <event name="checkout_type_onepage_save_order_after">
        <observer name="remove new email date" instance="TemplateMonster\ThemeOptions\Observer\RemoveMail" />
    </event>
</config>
